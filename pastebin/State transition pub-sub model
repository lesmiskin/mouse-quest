long stateTime;
bool stateInitialised = false;

typedef struct {
	GameState state;
	void (*actions[10])(void);
	int actionCount;
} StateTransition;

StateTransition transitions[4];

void initState() {
	transitions[STATE_INTERVAL].state = STATE_INTERVAL;
	transitions[STATE_TITLE].state = STATE_TITLE;
	transitions[STATE_GAME].state = STATE_GAME;
	transitions[STATE_INTRO].state = STATE_INTRO;
}

void addTransitionAction(GameState state, void(*function)(void)) {
	transitions[state].actions[transitions[state].actionCount++] = function;
}

