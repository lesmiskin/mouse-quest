static Asset makeAsset(char *path) {
	assert(renderer != NULL);

	char *absPath = makeAbsolutePath(path, ASSET_DIRECTORY);
	//Check existence on file system.
	if(!fileExists(absPath))
		fatalError("Could not find Asset on disk", absPath);

	//Load it and build Asset structure.
	SDL_Surface *original = IMG_Load(absPath);
	SDL_Texture *texture = SDL_CreateTextureFromSurface(renderer, original);

	//Code to duplicate in the future if we wish to keep the original around.
//	SDL_Surface *whiteSubject = malloc(sizeof(SDL_Surface));
//	memcpy(whiteSubject, original, sizeof(SDL_Surface));

	//TODO: Fix the following inline crap!

	//Construct a white variant (i.e. for being hit).
//	if(path == "spider.png") {
//		colouriseSprite(original, 128, true, false, false);
//	}else{
//		colouriseSprite(original, 96, true, true, true);
//	}
//	SDL_Texture *whiteVariant = SDL_CreateTextureFromSurface(renderer, original);

	Asset asset = {
		path,
		texture,
		texture
	};
	SDL_FreeSurface(original);

	return asset;
}

